{
  "name": "ecto",
  "version": "2.4.1",
  "description": "Modern Template Consolidation Engine for EJS, Markdown, Pug, Nunjucks, Liquid, and Handlebars",
  "main": "./dist/ecto.js",
  "types": "./dist/ecto.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredwray/ecto.git"
  },
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "keywords": [
    "templates",
    "generator",
    "framework",
    "html",
    "handlebars",
    "hbs",
    "markdown",
    "hjs",
    "ejs",
    "consolidate",
    "consolidatejs",
    "pug",
    "jade",
    "nunjucks",
    "njk",
    "mustache",
    "liquid",
    "liquidjs"
  ],
  "scripts": {
    "watch": "tsc -w -p .",
    "clean": "rimraf ./dist yarn.lock package-lock.json ./coverage ./node_modules ./site/readme.md",
    "test": "xo --fix && vitest run --coverage",
    "compile": "tsc -p .",
    "build": "rimraf ./dist && yarn && yarn test && yarn compile",
    "prepare": "rimraf ./dist && yarn compile",
    "website:build": "rimraf ./site/readme.md && npx -y writr build -s ./site -o ./dist-site",
    "website:serve": "rimraf ./site/readme.md && npx -y writr serve -s ./site -o ./dist-site"
  },
  "dependencies": {
    "@jaredwray/fumanchu": "^1.1.2",
    "@markdoc/markdoc": "^0.4.0",
    "ejs": "^3.1.9",
    "fs-extra": "^11.2.0",
    "helper-date": "^1.0.1",
    "liquidjs": "^10.10.0",
    "nunjucks": "^3.2.4",
    "pug": "^3.0.2",
    "underscore": "^1.13.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/nunjucks": "^3.2.6",
    "@types/pug": "^2.0.10",
    "@types/underscore": "^1.11.15",
    "@vitest/coverage-v8": "^1.2.2",
    "docula": "^0.3.7",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2",
    "webpack": "^5.90.1",
    "xo": "^0.57.0"
  },
  "xo": {
    "ignores": [
      "vitest.config.mjs"
    ]
  },
  "files": [
    "dist",
    "bin"
  ]
}
